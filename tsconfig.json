{
	"compilerOptions": {
		"outDir": "./host/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es5",
		"allowJs": true,
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
	},
	"include": [
	    "host/**/*"
	],
	"exclude": [
		"src/**/*"
	]
}