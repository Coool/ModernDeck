{
	"name": "ModernDeck",
	"productName": "ModernDeck",
	"version": "7.4.0-beta",
	"description": "TweetDeck, but more beautiful and fun than ever.",
	"homepage": "https://github.com/dangeredwolf/ModernDeck",
	"bugs": {
		"url": "https://github.com/dangeredwolf/ModernDeck/issues"
	},
	"author": "dangeredwolf",
	"license": "MIT",
	"main": "main.js",
	"scripts": {
		"pack": "electron-builder --dir",
		"dist": "electron-builder . --publish always",
		"distAll": "electron-builder -mwl --publish always",
		"build": "electron-builder .",
		"buildAll": "electron-builder -mwl",
		"buildWindows": "electron-builder -w",
		"buildMac": "electron-builder -m",
		"buildLinux": "electron-builder -l",
		"efMake": "electron-forge make --arch x64 --platform win32",
		"start": "electron .",
		"release": "build"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"ignore": [
					"dist",
					"build",
					"build..+",
					"donors.css",
					"electron-builder.json",
					"electron-builder-appx.json",
					"package-lock.json",
					"README.md",
					"LICENCES.md"
				]
			},
			"makers": [
				{
					"name": "@electron-forge/maker-appx",
					"config": {
						"name": "ModernDeck",
						"publisher": "CN=FEC2801E-B19C-4051-A5E2-465F7B251519",
						"makeVersionWinStoreCompatible": true,
						"flatten": true,
						"containerVirtualization": true
					}
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {
						"options": {
							"name": "moderndeck",
							"executableName": "moderndeck",
							"productName": "ModernDeck",
							"maintainer": "dangeredwolf",
							"genericName": "Twitter Client based on TweetDeck",
							"icon": "./build/icon.png",
							"homepage": "https://moderndeck.org"
						}
					}
				},
				{
					"name": "@electron-forge/maker-dmg",
					"config": {
						"name": "ModernDeck",
						"icon": "build/ModernDeck.icns",
						"background": "build/dmg/background.png",
						"format": "ULFO"
					}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {
						"options": {
							"name": "moderndeck",
							"productName": "ModernDeck",
							"maintainer": "dangeredwolf",
							"genericName": "Twitter Client based on TweetDeck",
							"icon": "./build/icon.png",
							"executableName": "moderndeck",
							"license": "MIT License",
							"homepage": "https://moderndeck.org"
						}
					}
				},
				{
					"name": "@electron-forge/maker-snap",
					"config": {
						"name": "moderndeck",
						"productName": "ModernDeck",
						"maintainer": "dangeredwolf",
						"genericName": "Twitter Client based on TweetDeck",
						"icon": "./build/icon.png",
						"license": "MIT License",
						"features": {
							"audio": true
						},
						"executableName": "moderndeck",
						"homepage": "https://moderndeck.org"
					}
				},
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "ModernDeck",
						"exe": "moderndeck",
						"iconUrl": "./build/icon.ico"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				}
			]
		}
	},
	"build": {
		"appId": "com.dangeredwolf.ModernDeck",
		"win": {
			"icon": "./build/icon.ico",
			"legalTrademarks": "Copyright 2014-2019 dangered wolf, released under the MIT licence",
			"publish": [
				"github"
			],
			"target": [
				{
					"target": "nsis",
					"arch": [
						"ia32",
						"x64"
					]
				}
			]
		},
		"appx": {
			"publisher": "CN=FEC2801E-B19C-4051-A5E2-465F7B251519",
			"publisherDisplayName": "dangeredwolf",
			"identityName": "53434dangeredwolf.ModernDeck",
			"artifactName": "ModernDeck_${arch}.${ext}",
			"applicationId": "ModernDeck",
			"backgroundColor": "#0078D7"
		},
		"nsis": {
			"deleteAppDataOnUninstall": true,
			"artifactName": "ModernDeck_${arch}.${ext}",
			"uninstallDisplayName": "ModernDeck",
			"differentialPackage": true
		},
		"nsisWeb": {
			"deleteAppDataOnUninstall": true,
			"artifactName": "ModernDeck_${arch}.${ext}",
			"uninstallDisplayName": "ModernDeck",
			"differentialPackage": true
		},
		"mac": {
			"publish": [
				"github"
			],
			"icon": "./build/ModernDeck.icns",
			"artifactName": "ModernDeck.${ext}",
			"minimumSystemVersion": "10.11.0",
			"darkModeSupport": true,
			"category": "public.app-category.social-networking"
		},
		"dmg": {
			"background": "./build/dmg/background.png",
			"title": "ModernDeck"
		},
		"linux": {
			"category": "Network",
			"publish": [
				"github"
			],
			"icon": "./build/icons/512x512.png",
			"maintainer": "dangeredwolf",
			"artifactName": "ModernDeck_${arch}.${ext}",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"ia32",
						"arm64"
					]
				}
			]
		}
	},
	"repository": "https://github.com/dangeredwolf/ModernDeck",
	"keywords": [
		"TweetDeck",
		"ModernDeck",
		"Modern",
		"Tweet",
		"Deck",
		"Material",
		"Design"
	],
	"dependencies": {
		"asar": "^2.0.1",
		"electron-log": "^3.0.7",
		"electron-packager": "^14.0.5",
		"electron-store": "^4.0.0",
		"electron-updater": "^4.1.2",
		"file-type": "^12.3.0",
		"got": "^9.6.0",
		"through2": "^3.0.1",
		"electron-squirrel-startup": "^1.0.0"
	},
	"devDependencies": {
		"@node-minify/core": "^4.1.2",
		"@node-minify/csso": "^4.1.2",
		"@node-minify/uglify-es": "^4.1.2",
		"adm-zip": "^0.4.13",
		"electron": "^6.0.7",
		"@electron-forge/cli": "6.0.0-beta.44",
		"@electron-forge/maker-appx": "6.0.0-beta.44",
		"@electron-forge/maker-deb": "6.0.0-beta.44",
		"@electron-forge/maker-dmg": "6.0.0-beta.44",
		"@electron-forge/maker-rpm": "6.0.0-beta.44",
		"@electron-forge/maker-snap": "6.0.0-beta.44",
		"@electron-forge/maker-squirrel": "6.0.0-beta.44",
		"@electron-forge/maker-zip": "6.0.0-beta.44",
		"fs-extra": "^8.0.1",
		"klaw": "^3.0.0",
		"stylelint": "^10.1.0",
		"stylelint-config-recommended": "^2.2.0"
	},
	"stylelint": {
		"extends": "stylelint-config-recommended"
	}
}
