{
  "name": "TweetDeck Enhancer",
  "short_name": "TDE",

  "description": "The world's most loved twitter client.",
  "version": "5.3",

  "default_locale": "en_US",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://tweetdeck.twitter.com/",
    "https://ton.twimg.com/",
    "contextMenus",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*"],
      "js": ["extension/TDELoad.js"],
      "css": ["sources/enhancer.min.css"], /* dev */
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["extension/TDEBackground.js"],
    "persistent": true
  },

  "icons": {
      "16": "AppIcon16.png",
      "24": "AppIcon24.png",
      "32": "AppIcon32.png",
      "48": "AppIcon48.png",
      "64": "AppIcon64.png",
      "128": "Icon.png",
      "500": "sources/tdeaboutsmaller.png"
   },

  "web_accessible_resources": [
    "sources",
    "sources/*"
  ],

  "browser_action": {
    "default_icon": "sources/oneclick/InstaTweetDeck.png",
    "default_popup": "extension/ITD.html",
    "default_title": "__MSG_ButtonHoverTitle__"
  },

  "manifest_version": 2
}
